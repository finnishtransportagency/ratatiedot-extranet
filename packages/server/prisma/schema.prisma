// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client"
  output        = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum VersionStatus {
  OFFICIAL
  UNCONFIRMED
}

model CategoryDataBase {
  id                     String                @id @default(uuid())
  rataextraRequestPage   String
  alfrescoFolder         String
  categoryDataContents   CategoryDataContents?
  categoryComponents     CategoryComponent[]
  writeRights            String
  FavoriteCategory       FavoriteCategory[]
  hasClassifiedContent   Boolean               @default(false)
  hasConfidentialContent Boolean               @default(false)
  Activity               Activity[]
}

model CategoryDataContents {
  id               String           @id @default(uuid())
  categoryDataBase CategoryDataBase @relation(fields: [baseId], references: [id])
  baseId           String           @unique
  fields           Json
}

model CategoryComponent {
  id               String           @id @default(uuid())
  categoryDataBase CategoryDataBase @relation(fields: [categoryId], references: [id])
  categoryId       String
  node             Node?
  card             Card?
}

model Node {
  id                  String             @id @default(uuid())
  title               String
  type                String
  alfrescoNodeId      String
  CategoryComponent   CategoryComponent? @relation(fields: [categoryComponentId], references: [id])
  categoryComponentId String             @unique
}

model Card {
  id                  String             @id @default(uuid())
  title               String
  content             Json
  CategoryComponent   CategoryComponent? @relation(fields: [categoryComponentId], references: [id])
  categoryComponentId String             @unique
}

model FavoriteCategory {
  id               String           @id @default(uuid())
  userId           String
  categoryDataBase CategoryDataBase @relation(fields: [categoryId], references: [id])
  categoryId       String

  @@unique([userId, categoryId], name: "favoriteCategoryIdentifier") // compound unique constraint
}

model Activity {
  id               String            @id @default(uuid())
  fileName         String
  categoryDataBase CategoryDataBase? @relation(fields: [categoryId], references: [id])
  categoryId       String?
  alfrescoId       String?
  timestamp        DateTime
  action           String
  mimeType         String
  activityId       BigInt            @unique
}

model Notice {
  id               String    @id @default(uuid())
  title            String?
  content          Json
  authorId         String?
  createdTime      DateTime  @default(now())
  publishTimeStart DateTime  @default(now())
  publishTimeEnd   DateTime?
  showAsBanner     Boolean   @default(false)
}

model Balise {
  id              String          @id @default(uuid())
  secondaryId     Int             @unique
  version         Int
  versionStatus   VersionStatus   @default(OFFICIAL)
  description     String
  fileTypes       String[] // ["file1.leu", "file2.il", "data.pdf", ...]. stores full filenames to track all files
  history         BaliseVersion[]
  createdBy       String
  createdTime     DateTime        @default(now())
  locked          Boolean         @default(false)
  lockedBy        String?
  lockedTime      DateTime?
  lockedAtVersion Int?
  lockReason      String?
  deletedAt       DateTime?
  deletedBy       String?
}

model BaliseVersion {
  id                 String        @id @default(uuid())
  baliseId           String
  balise             Balise        @relation(fields: [baliseId], references: [id])
  secondaryId        Int
  version            Int
  versionStatus      VersionStatus @default(OFFICIAL)
  description        String
  fileTypes          String[]
  createdBy          String
  createdTime        DateTime
  locked             Boolean
  lockedBy           String?
  lockedTime         DateTime?
  versionCreatedTime DateTime      @default(now())

  @@index([baliseId, version])
}


model Section {
  id          String    @id @default(uuid())
  name        String // e.g., "Helsinki-Riihim√§ki"
  key         String    @unique // e.g., "section_1"
  idRangeMin  Int // e.g., 10000
  idRangeMax  Int // e.g., 19999
  description String? // Optional description
  active      Boolean   @default(true)
  createdBy   String
  createdTime DateTime  @default(now())
  updatedBy   String?
  updatedTime DateTime?

  @@index([idRangeMin, idRangeMax])
}

model BaliseArchive {
  id                  String                  @id @default(uuid())
  originalId          String                  @unique // Original balise ID for reference
  originalSecondaryId Int                     // Original secondary ID (may not be unique across archives)
  archivedSecondaryId String                  @unique // Unique archive ID: "balise_12345_20231205143022"
  version             Int
  versionStatus       VersionStatus           @default(OFFICIAL)
  description         String
  fileTypes           String[] // ["file1.leu", "file2.il", "data.pdf", ...]. stores full filenames to track all files
  history             BaliseArchiveVersion[]
  createdBy           String
  createdTime         DateTime
  locked              Boolean
  lockedBy            String?
  lockedTime          DateTime?
  lockedAtVersion     Int?
  deletedAt           DateTime?
  deletedBy           String?
  archivedAt          DateTime                @default(now())
  archivedBy          String

  @@index([originalSecondaryId])
  @@index([archivedSecondaryId])
  @@index([archivedAt])
  @@index([originalId])
}

model BaliseArchiveVersion {
  id                  String        @id @default(uuid())
  baliseArchiveId     String
  baliseArchive       BaliseArchive @relation(fields: [baliseArchiveId], references: [id])
  originalVersionId   String        @unique // Original version ID for reference
  originalSecondaryId Int           // Original secondary ID (may not be unique across archives)
  archivedSecondaryId String        // References parent BaliseArchive.archivedSecondaryId
  version             Int
  versionStatus       VersionStatus @default(OFFICIAL)
  description         String
  fileTypes           String[]
  createdBy           String
  createdTime         DateTime
  locked              Boolean
  lockedBy            String?
  lockedTime          DateTime?
  versionCreatedTime  DateTime
  archivedAt          DateTime      @default(now())

  @@index([baliseArchiveId, version])
  @@index([originalSecondaryId, version])
  @@index([archivedSecondaryId, version])
}
